[alias]
  f = fetch
  fm = fetch origin main:main
  w = website
  wip = commit -m wip --no-verify
  i = issue
  p = pull
  ad = add
  br = branch
  cm = commit
  co = checkout
  ce = commit --amend --no-edit # ce for fugitive.vim's "ce" mapping
  cp = cherry-pick
  lg = log
  df = diff
  sh = show
  cp = cherry-pick
  dfs = diff --staged
  dfc = diff --check
  dfsc = diff --staged --check
  incoming = log ..@{u}
  outgoing = log @{u}..
  dfw = diff --word-diff=color
  lol = log --graph --decorate --oneline
  lola = log --graph --decorate --oneline --all
  pushh = push --push-option ci.skip # shhhhhh
  cleanhard = clean -dfx
