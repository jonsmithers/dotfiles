{
  "editor.smoothScrolling": true,
  "open-in-vim.openMethod": "kitty",
  "open-in-vim.useNeovim": true,
  "vim.leader": " ",
  "vim.visualStaor": true,
  "vim.incsearch": true,
  "vim.sneak": true,
  "vim.surround": true,
  "vim.hlsearch": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"],
    },
    {
      "before": [" ", "l", "e"],
      "commands": ["eslint.executeAutofix"],
    },
    {
      "before": [" ", "o", "i"],
      "commands": ["editor.action.organizeImports"],
    },
    {
      "before": ["]", " "],
      "after": ["o", "<esc>"],
    },
    {
      "before": ["[", " "],
      "after": ["O", "<esc>"],
    },
    {
      "before": ["]", "e"],
      "after": ["d", "d", "p"],
    },
    {
      "before": ["[", "e"],
      "after": ["k", "d", "d", "p", "k"],
    },
    {
      "before": ["[", "g"],
      "commands": ["editor.action.marker.prev"],
    },
    {
      "before": ["]", "g"],
      "commands": ["editor.action.marker.next"],
    },
    {
      "before": ["<leader>", "s", "d", "f"],
      "commands": [":nohl"],
    },
    {
      "before": ["<space>", "<space>"],
      "commands": [":w"],
    },
    {
      "before": ["<space>", "r", "r"],
      "commands": ["testing.reRunLastRun"],
    },
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"],
    },
  ],
  "workbench.colorTheme": "Catppuccin Frapp√©",
  "workbench.iconTheme": "catppuccin-frappe",
  "open-in-vim.restoreCursorAfterVim": true,
  // To improve performance
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1,
    "vscodevim.vim": 1
  },
  "vscode-neovim.compositeKeys": {
    "jk": {
      "command": "vscode-neovim.escape",
    },
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "vscode-neovim.ctrlKeysForNormalMode": [
    "a",
    "b",
    "c",
    "d",
    "e",
    "f",
    "h",
    "i",
    "j",
    "k",
    "l",
    "m",
    "o",
    "r",
    "t",
    "u",
    "v",
    "w",
    "x",
    "y",
    "z",
    "/",
    "]",
    "right",
    "left",
    "up",
    "down",
    "backspace",
    "delete",
    "n"
  ],
  "editor.fontFamily": "Monaspace Neon Var, JetBrains, Menlo, Monaco, 'Courier New', monospace",
  "git.blame.editorDecoration.enabled": false,
  "workbench.editor.showTabIndex": true,
  "workbench.editor.tabSizingFixedMinWidth": 100,
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.editor.pinnedTabsOnSeparateRow": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always"
}
